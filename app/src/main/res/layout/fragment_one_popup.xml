<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_one_popup"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/White"
              android:padding="10sp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0.7">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/popup_listView"
                android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_weight="0.1">

        <Button
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/back_button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BackButton"
                android:id="@+id/btn_close_popup_one"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/remove_expense_button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Remove"
                android:id="@+id/btn_remove_expense"
                android:layout_marginLeft="20dp"/>

    </LinearLayout>

</LinearLayout>
